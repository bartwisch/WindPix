{
  "name": "WindPix",
  "version": "1.0.0",
  "description": "Cross-platform screenshot tool for Windsurf",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "33.3.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "screenshot-desktop": "^1.15.0"
  },
  "build": {
    "appId": "com.windpix.app",
    "icon": "assets/512.png",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon-dock.png",
      "target": ["dmg"]
    },
    "dmg": {
      "icon": "assets/512.png",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/512.png"
    }
  }
}
